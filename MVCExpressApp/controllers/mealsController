exports.getMenuController = (req, res, next) => {
  // Fetch menu meals from the database using the Mongoose model
  mealModel.find({}, (err, meals) => {
    if (err) {
      return next(err);
    }
    // Render the "menu" view and pass the fetched meals as data
    res.render('menu', { meals });
  });
};